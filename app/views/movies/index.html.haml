-# This file is app/view/movies/index.html.haml
%h1 All Movies

%table#movies
  %thead
    %tr
      %th{:class=>("hilite" if @sort_key == "title")}= link_to 'Movie Title', movies_path(:sort_by=>"title")
      %th Rating
      %th{:class=>("hilite" if @sort_key == "release_date")}= link_to 'Release Date', movies_path(:sort_by=>"release_date")
      %th More Info
      / %sort_key{:class=>"title"}
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

/ = link_to 'Add new movie', new_movie_path

/ = form_tag movies_path, :method => :get do
/   Include: 
/   - @all_ratings.each do |rating|
/     = rating
/     = check_box_tag("ratings[#{rating}]", 'yes', @filter_ratings.include?(rating))
/   = submit_tag 'Refresh'
/   = hidden_field_tag 'sort_by', @sort_by

